int countsubtreesum(Node* root,int x,int &count)
{
    if(root==NULL)
    return 0;
    int lss=countsubtreesum(root->left,x,count);
    int rss=countsubtreesum(root->right,x,count);
    int sum=lss+rss+root->data;
    if(sum==x)
    count++;
    return sum;
}
int countSubtreesWithSumX(Node* root, int x)
{
	if(root==NULL)
	return 0;
	int count=0;
	
	int ls=countsubtreesum(root->left,x,count);
    int rs=countsubtreesum(root->right,x,count);
    int sum=ls+rs+root->data;
    if(sum==x)
    count++;
    return count;
    
}
