class Solution {
public:
    bool canPartition(vector<int>& nums) {
        int sum=0;
        for(int i=0;i<nums.size();i++)
            sum=sum+nums[i];
        if(sum%2==1)
            return false;
        sum=sum/2;
        int n=nums.size();
        bool mat[n+1][sum+1];
        for(int j=0;j<sum+1;j++)
            mat[0][j]=false;
        mat[0][0]=true;
        for(int i=1;i<n+1;i++)
            for(int j=0;j<sum+1;j++)
            {
                if(nums[i-1]<=j)
                    mat[i][j]=mat[i-1][j]||mat[i-1][j-nums[i-1]];
                else if(nums[i-1]>j)
                    mat[i][j]=mat[i-1][j];
            }
            
        return mat[n][sum];
    }
};
